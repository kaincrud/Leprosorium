<h4>Post details:</h4>
<br/>
<p>
  <%= @row['content'] %>
  <br/>
  <br/>
  Added at <%= @row['created_date'] %>
</p>
<br/>
<h4>Comments:</h4>
<br/>
<% @comments.each do |comment| %>
<p>
<%= comment['content'] %>
  <br/>
  <br/>
  <span style="font-size: 75%; color=#999">Added at <%= comment['created_date'] %> </span>
</p>
  <hr/>
<% end %>
<p>
<form action="/details/<%= @row['id'] %>" method="POST" role="form">
  <div>
    <textarea name="content" class="form-control" placeholder="Type comment text here" rows="6"></textarea>
  </div>
  <br/>
  <button type="submit" class="btn btn-primary">Add comment</button>
</form>
</p>